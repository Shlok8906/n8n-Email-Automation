{
  "root": true,
  "env": {
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "warn"
  },
  "overrides": [
    {
      "files": ["backend/**/*.js"],
      "env": { "node": true }
    },
    {
      "files": ["frontend/**/*.js"],
      "env": { "browser": true }
    }
  ]
}